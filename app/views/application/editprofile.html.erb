<script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.2/js/standalone/selectize.min.js"></script>

<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br/>
        <div class="row mx-auto">
          <div class="col-lg-12 ">
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb bg-dark text-white mx-auto">
                <li class="breadcrumb-item mx-auto  text-white active" aria-current="page">Edit Profile</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>


      <div class="col-lg-12">
        <div class="card w-100">
          <div class="card-body w-100">
            <form action="/users" accept-charset="UTF-8" method="post">
              <input type="hidden" name="_method" value="put">
              <%= token_tag %>
              
              <b>Personal Information</b>
                <hr>
                <div class="form-group">
                  <label for="sel1">Gender</label>
                  <select class="form-control" name="user[Gender]">
                    <% if @user.Gender=='Female' %>
                      <option value="Female" selected>Female</option>
                      <option value="Male" >Male</option>
                    <% else %>
                      <option value="Male" selected>Male</option>
                      <option value="Female">Male</option>
                    <%end%>
                  </select>
                </div>

                <div class="form-group">
                <input type="hidden" class="form-control" id="exampleInputContact" placeholder="Date of birth in DD/MM/YYYY" name="user[email]" required="true" value="<%= @user.email%>">
              </div>

                <div class="form-group">
                <label for="exampleInputContact">Born on</label>
                <input type="text" class="form-control" id="exampleInputContact" placeholder="Date of birth in DD/MM/YYYY" name="user[bornon]" required="true" value="<%= @user.bornon%>">
              </div>

                <label>Country</label>
              <div class="form-row">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Living in country" name="user[country]" autofocus="autofocus" required="true" value="<%= @user.country%>" >
                </div>
              </div>


               <div class="form-group">
                <label for="exampleInputContact">Interests</label>
                <input type="text" class="form-control" id="interests"  placeholder="Enter your hobbies" name="user[interests]" value="<%= @user.interests%>"  class="">
              </div>


               <div class="form-group">
                <label for="exampleInputContact">About Me</label>
                <textarea class="form-control" id="exampleInputContact" placeholder="Describe yourself" name="user[about]"  value="<%= @user.about%>"></textarea>
              </div>
              <br/>

              <b>Professional Information</b><hr>
             <div class="form-group">
                  <label for="sel1">Profession</label>
                  <select class="form-control" name="user[profession]">
                    <option value="Student">Student</option>
                    <option value="Working">Working</option>
                  </select>
                </div>
                 <label id="profession" style="display: hidden;">Student At</label>
              <div class="form-row">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Working or Studying at (Company Name or Institution Name)" name="user[profession_place]" autofocus="autofocus" required="true" value="<%= @user.profession_place%>">
                </div>
              </div>
              <br/>

              <b>Social Links</b>
                <hr>

              <label>Facebook</label>
              <div class="form-row">
                <div class="col">
                  <input type="url" class="form-control" placeholder="Facebook Profile Url" name="user[facebook]" autofocus="autofocus"  value="<%= @user.facebook%>">
                </div>
              </div><br/>
              <label>Twitter</label>
               <div class="form-row">
                <div class="col">
                  <input type="url" class="form-control" placeholder="Twitter Profile Url" name="user[twitter]" autofocus="autofocus"  value="<%= @user.twitter%>" >
                </div>
              </div><br/>
              <label>Linkedin</label>
              <div class="form-row">
                <div class="col">
                  <input type="url" class="form-control" placeholder="Linkedin Profile Url" name="user[linkedin]" autofocus="autofocus"  value="<%= @user.linkedin%>">
                </div>
              </div><br/>


             <center><button type="submit" class="btn btn-primary"  name="commit" id="submit_button">Update Profile</button></center>
            </form>
            <br/>   
          </div></div></div>



        </div>
      </div>

<script>
        $('#interests').selectize({
          persist: false,
          create: true,
          render: {
            item: function(data, escape) {
              return '<div>"' + escape(data.text) + '"</div>';
            }
          },
          onDelete: function(values) {
            return confirm(values.length > 1 ? 'Are you sure you want to remove these ' + values.length + ' items?' : 'Are you sure you want to remove "' + values[0] + '"?');
          }
        });
</script>

