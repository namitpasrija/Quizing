<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br/><br/>
        <div class="row mx-auto">
          <div class="col-lg-12 ">
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb bg-dark text-white mx-auto">
                <li class="breadcrumb-item mx-auto  text-white active" aria-current="page">Sign up</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="card w-100">
          <div class="card-body w-100">
      
          <%= devise_error_messages! %>

            <form action="/users" accept-charset="UTF-8" method="post">
              <%= token_tag %>
              <label>Full name</label>
              <div class="form-row">
                
                <div class="col">
                  <input type="text" class="form-control" placeholder="First name" name="user[FirstName]" autofocus="autofocus" required="true" >
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Last name" name="user[LastName]" required="true">
                </div>
              </div><br/>
              <div class="form-group">
                <label for="exampleInputEmai1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmai1" aria-describedby="emailHelp" placeholder="Enter email" name="user[email]" required="true">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputContact">Mobile number</label>
                <input type="" class="form-control" id="exampleInputContact" aria-describedby="ContactHelp" placeholder="Enter mobile number" name="user[Contact]" required="true">
                
              </div>

              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="user[password]" required="true">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password" name="user[password_confirmation]" required="true">
              </div>
             <center><button type="submit" class="btn btn-primary"  name="commit" id="submit_button">Register</button></center>
            </form>
            <br/>
          <%= render "devise/shared/links" %>
            
          </div></div></div>

        </div>
      </div>