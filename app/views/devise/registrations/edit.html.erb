<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br/><br/>
        <div class="row mx-auto">
          <div class="col-lg-12 ">
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb bg-dark text-white mx-auto">
                <li class="breadcrumb-item mx-auto  text-white active" aria-current="page">Update Information</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="card w-100">
          <div class="card-body w-100">
        
          <%= devise_error_messages! %>

            <form action="/users" accept-charset="UTF-8" method="post">
               <input type="hidden" name="_method" value="put">
              <%= token_tag %>
              <label>Full name</label>
              <div class="form-row">
                
                <div class="col">
                  <input type="text" class="form-control"  value="<%= @user.FirstName %>" placeholder="First name" name="user[FirstName]" autofocus="autofocus" >
                </div>
                <div class="col">
                  <input type="text" class="form-control" value="<%= @user.LastName %>"   placeholder="Last name" name="user[LastName]">
                </div>
              </div><br/>
              <div class="form-group">
                <label for="exampleInputEmai1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmai1" aria-describedby="emailHelp" placeholder="Enter email" name="user[email]" value="<%= @user.email %>">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputContact">Mobile number</label>
                <input type="" class="form-control" value="<%= @user.Contact %>" id="exampleInputContact" aria-describedby="ContactHelp" placeholder="Enter mobile number" name="user[Contact]">
              </div>
              
              
              <div class="form-group">
                <label for="exampleInputPassword1">New Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="user[password]" autocomplete="off">
                <small id="emailHelp" class="form-text text-muted">Leave blank if you don't want to change password</small>
              </div>


              <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password"  name="user[password_confirmation]">
                <small id="emailHelp" class="form-text text-muted">Leave blank if you don't want to change password</small>
              </div>
              <center><button type="submit" class="btn btn-primary"  name="commit" id="submit_button">Update Information</button></center>
            </form>
            <br/>
    
          </div></div></div>

        </div>
      </div>
