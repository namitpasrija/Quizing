<%= form_for @problem, url: {action: "update"} do |f| %>
	<%= f.hidden_field :testid, :value => @problem.testid %><br/>
	Question Number: <%= f.number_field :queno %><br/>
	Question: <%= f.text_area :que %><br/>
	Option1: <%= f.text_area :option1 %><br/>
	Option2: <%= f.text_area :option2 %><br/>
	Option3: <%= f.text_area :option3 %><br/>
	Option4: <%= f.text_area :option4 %><br/>
	Answer: <%= f.text_field :answer %><br/>
	Marks: <%= f.text_field :marks%><br/>
	Subject: <%= f.text_field :subject %><br/>
	Difficulty Level: <%= f.number_field :difflevel,min: '1',max: '5' %><br/>
	<%= f.submit%>
<%end%>